#!/bin/sh

# put the following line in ~/.bashrc
# . ~/.rc/bashrc.common

if [ -f ~/.rc/gitrc ]; then
    . ~/.rc/gitrc
fi
if [ -f ~/.rc/bashrc.local ]; then
	. ~/.rc/bashrc.local
fi


export LANG=en_US.UTF-8
export -n LC_ALL=
export LC_CTYPE=en_US.UTF-8

export CSCOPE_DB=~/.cscope/cscope.out
export EDITOR=vim
export PATH=~/bin:$PATH

PROMPT_COMMAND="history -a"
HISTIGNORE='&:exit:ls'
